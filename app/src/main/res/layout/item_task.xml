<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    >

    <View style="@style/ViewSoildLine" />

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        >
        <TextView
            android:id="@+id/tv_task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="这里用来显示标题"
            android:textColor="@color/gray_font"
            android:textSize="20sp" />
    </RelativeLayout>

    <View style="@style/ViewSoildLine" />
    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_title"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        >
        <TextView
            android:id="@+id/tv_task_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:lines="4"
            android:hint="这里显示文本内容"
            android:textSize="15sp" />
    </RelativeLayout>

    <View style="@style/ViewSoildLine" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/rl_content"
        >
        <TextView
            android:id="@+id/tv_task_createtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:hint="这里显示时间"
            android:textColor="@color/gray_font"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_task_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_task_createtime"
            android:hint="这里显示位置信息"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:textColor="@color/gray_font"
            android:textSize="15sp" />
    </RelativeLayout>

</RelativeLayout>