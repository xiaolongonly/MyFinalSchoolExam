<?xml version="1.0" encoding= "utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_popwin_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#50000000"
    android:orientation="vertical">

    <LinearLayout
        style="@style/fillX"
        android:background="#fff"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_all_tasks"
            style="@style/fillX"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="13dp"
            android:paddingLeft="20dp"
            android:paddingTop="13dp">

            <TextView
                android:id="@+id/tv_all_tasks_type"
                style="@style/wrap"
                android:text="全部"
                android:textColor="@color/tasks_type_txt_color"
                android:textSize="15sp" />
            <View
                android:id="@+id/iv_all_tasks_type"
                android:layout_width="14dp"
                android:layout_height="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/tasks_type_pic_selector"
                />
        </LinearLayout>

        <View style="@style/ViewBoldSolidLine" />

        <LinearLayout
            android:id="@+id/ll_untake_tasks"
            style="@style/fillX"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="13dp"
            android:paddingLeft="20dp"
            android:paddingTop="13dp">

            <TextView
                android:id="@+id/tv_untake_tasks_type"
                style="@style/wrap"
                android:text="未接取"
                android:textColor="@color/tasks_type_txt_color"
                android:textSize="15sp" />
            <View
                android:id="@+id/iv_untake_tasks_type"
                android:layout_width="14dp"
                android:layout_height="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/tasks_type_pic_selector"
                />
        </LinearLayout>

        <View style="@style/ViewBoldSolidLine" />

        <LinearLayout
            android:id="@+id/ll_havetake_tasks"
            style="@style/fillX"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="13dp"
            android:paddingLeft="20dp"
            android:paddingTop="13dp">

            <TextView
                android:id="@+id/tv_havetake_tasks_type"
                style="@style/wrap"
                android:text="已接取"
                android:textColor="@color/tasks_type_txt_color"
                android:textSize="15sp" />
            <View
                android:id="@+id/iv_havetake_tasks_type"
                android:layout_width="14dp"
                android:layout_height="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/tasks_type_pic_selector"
                />
        </LinearLayout>

        <View style="@style/ViewBoldSolidLine" />

        <LinearLayout
            android:id="@+id/ll_havefinish_tasks"
            style="@style/fillX"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="13dp"
            android:paddingLeft="20dp"
            android:paddingTop="13dp">

            <TextView
                android:id="@+id/tv_havefinish_tasks_type"
                style="@style/wrap"
                android:drawablePadding="10dp"
                android:text="已完成"
                android:textColor="@color/tasks_type_txt_color"
                android:textSize="15sp" />
            <View
                android:id="@+id/iv_havefinish_tasks_type"
                android:layout_width="14dp"
                android:layout_height="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/tasks_type_pic_selector"
                />
        </LinearLayout>

        <View style="@style/ViewBoldSolidLine" />

        <LinearLayout
            android:id="@+id/ll_haveclose_tasks"
            style="@style/fillX"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="13dp"
            android:paddingLeft="20dp"
            android:paddingTop="13dp">

            <TextView
                android:id="@+id/tv_haveclose_tasks_type"
                style="@style/wrap"
                android:drawablePadding="10dp"
                android:text="已关闭"
                android:textColor="@color/tasks_type_txt_color"
                android:textSize="15sp" />
            <View
                android:id="@+id/iv_haveclose_tasks_type"
                android:layout_width="14dp"
                android:layout_height="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/tasks_type_pic_selector"
                />
        </LinearLayout>

        <View style="@style/ViewBoldSolidLine" />


        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_tasks_type_pic" />
    </LinearLayout>
</LinearLayout>
