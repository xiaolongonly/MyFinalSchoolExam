<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/userview_style"
    >

    <com.u1city.module.widget.RoundedImageView
        android:id="@+id/iv_userimg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_default_avatar_guider" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_userimg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="texttest" />
</RelativeLayout>