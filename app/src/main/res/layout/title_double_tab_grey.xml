<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="#f8f8f8">

        <ImageButton
            android:id="@+id/iv_head_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_default_avatar_guider" />
          
        <LinearLayout
		    android:id="@+id/title_ll"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <TextView
                android:id="@+id/left_tab_tv"
                android:layout_width="90dp"
                android:layout_height="29dp" 
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="14dp"
                android:background="@drawable/brand_mytrace_title_left_select"/>
                            
            <TextView
                android:id="@+id/right_tab_tv"
                 android:layout_width="90dp"
                android:layout_height="29dp"                              
                android:textColor="#7b7b7b"
                android:gravity="center"
                android:textSize="14dp"
                android:background="@drawable/brand_mytrace_title_right"/>
        </LinearLayout>
      
		<ProgressBar
            android:id="@+id/pb_loading"
            style="?android:attr/progressBarStyleSmallTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           	android:layout_centerVertical="true"
           	android:layout_toLeftOf="@+id/title_ll"
            android:layout_marginRight="8dp"           	
            android:visibility="gone"/>
        
        <View style="@style/ViewSoildLine"
            android:layout_alignParentBottom="true"/>

		        
</RelativeLayout>