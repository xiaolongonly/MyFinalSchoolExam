<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.8"
    android:background="#000" >
    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:src="@drawable/dialog_scancode_close"
         />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dialog_scancode_top_right"
        android:layout_above="@+id/tv_qrcode"
        android:layout_toLeftOf="@+id/tv_qrcode"
         />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dialog_scancode_bottom_right"
        android:layout_below="@+id/tv_qrcode"
        android:layout_toRightOf="@+id/tv_qrcode"
         />
        <ImageView
        android:id="@+id/tv_qrcode"
        android:layout_width="250dip"
        android:layout_height="250dip"
        android:layout_centerInParent="true"
        />
        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_qrcode"
        android:layout_toLeftOf="@+id/tv_qrcode"
        android:src="@drawable/dialog_scancode_bottom_left"
         />
            <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dialog_scancode_top_left"
        android:layout_toRightOf="@+id/tv_qrcode"
         android:layout_above="@+id/tv_qrcode"
         />


</RelativeLayout>